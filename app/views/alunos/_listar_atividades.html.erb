<br />
<font face="NewStencil size="5em" color= "#067120" >
Lista de atividades de <%= current_aluno.nome %></font><br /><br />
<section>
<div id="MyAtividades"><table id="home" summary="Atividades"><caption>Atividades</caption>
    <thead >
    <tr>
        <th>Nome</th>
        <th>Descricao</th>
        <th>Inicio</th>
        <th>Termino</th>
        <th>Carga horária enviada</th>
        <th>Carga horária aceita</th>
        <th>Anexar Comprovante</th>
        <th>Ver Comprovante</th>
        <th>Avaliada</th>
        <th>Avaliada por</th>
        <th>Justificativa</th>
        <th>Excluir</th>
    </tr>
    </thead>
    <tbody id="home">
        <% for atividade in atividades %>
            <tr id="home">
            <th><center><%= atividade.nome %></center></th>
            <td><center><%= atividade.modalidade_nome %></center></td>
            <td><center><%= atividade.inicio %></center></td>
            <td><center><%= atividade.termino %></center></td>
            <td><center><%= atividade.carga_horaria %></center></td>
            <td><center><%= atividade.carga_horaria_aceita %></center></td>
            <td><center>
                <a href = "<%= edit_atividade_path(atividade) %>" alt="Anexar Comprovante">
                    <%= image_tag atividade.comprovante.url(:tamanho_pequeno) %>
                </a></center>
            </td>
            <% if atividade.comprovante_file_name.nil? %>
                    <center><TD><label class="large">Sem Comprovante!</label></TD></center>
                <% else %>
                    <td><center>
                        <a href = "<%= atividade.comprovante %>" alt="Anexar Comprovante">
                        <%= image_tag("samples/iconpdf.png", :width=>"60",:height=>"50", :alt=>"Ver
Comprovante") %>
                        </center></a>
                    </td>
                <%-end-%>
                <td><center><label class="large"><%= yes_or_no?(atividade.avaliada) %></center></label></td>
                <td>
                    <center>
                        <% if atividade.avaliador.nil?  %>
                            <label class="large">Não possui avaliador!</label>
                        <% else %>
                            <%= atividade.avaliador.nome %>
                        <%-end-%>
                    </center>
                </td>

                <td><%= link_to 'Exibir', atividade %></td>
                <td>
                   <%= link_to 'Excluir', excluir_atividade_path(atividade), :method => :delete, :confirm => 'Tem Certeza?'  %>
                </td>
             </tr>

    <%- end -%>
    </tbody>
    </table>

<table id="bottom" summary="Atividades">
    <CAPTION>
        <%= current_aluno.contar_horas_aceitadas(current_aluno) %>
   </CAPTION>
</table>
</div> 
<br />
<div class="flickr_pagination pagination">
    <div class="page_info">
        <%= will_paginate atividades, :previous_label => "&laquo; Anterior", :next_label => "Próxima &raquo;", :container => false%>
    </div><br />
</div>
