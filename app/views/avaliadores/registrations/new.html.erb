<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |l| %>
  <%= devise_error_messages! %>
  <div class="field">
       <b>Nome.:</b><br>
	   <%= l.text_field :nome %>
  </div>
  <div class="field">
	   <b>Titulação.:</b><br>
	   <%= l.text_field :titulacao %>
  </div>
  <div class="field">
	    <b>Sexo.:</b>
	    <%= l.radio_button :sexo, "Masculino" %>Masculino
	    <%= l.radio_button :sexo, "Feminino" %>Feminino
  </div>
  <div class="field">
	  <b>Matricula.:</b><br>
	    <%= l.text_field :matricula %>
  </div>
  <div>
		<%= l.label :email %><br />
  <%= l.email_field :email %></div>

  <div><%= l.label :password %><br />
  <%= l.password_field :password %></div>

  <div>
	<%= l.label :password_confirmation %><br />
	<%= l.password_field :password_confirmation %></div>

  <div>
	<%= l.submit "Sign up" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
