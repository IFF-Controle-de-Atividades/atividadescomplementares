<h1>Listando atividades</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Inicio</th>
    <th>Termino</th>
    <th>Carga horaria</th>
    <th>Carga Horaria Aceita</th>
    <th>Aluno</th>
    <th>Avaliada</th>
    <th>Avaliador</th>
    
  </tr>

<% @atividades.each do |atividade| %>
  <tr>
    <td><%= atividade.nome %></td>
    <td><%= atividade.descricao %></td>
    <td><%= atividade.inicio %></td>
    <td><%= atividade.termino %></td>
    <td><%= atividade.carga_horaria %></td>
    <td><%= atividade.carga_horaria_aceita %></td>
    <td><%= atividade.aluno.nome %></td>
    <td><%= yes_or_no?(atividade.avaliada) %></td>
    <td><%= atividade.avaliador.nome %></td>
    
  </tr>
<% end %>
</table>

<br />


